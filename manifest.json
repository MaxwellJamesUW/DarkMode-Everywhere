{
    "manifest_version": 3,
    "name": "DarkMode Everywhere",
    "description": "Change the background color, text color, and font on any page.",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content-scripts/page.js"
            ]
        }
    ]
}